      (if (or (pred x) (> x b))
          x
          (next-valid (next x))))
    (define (accumulate-iter x)
      (if (> x b)
          null-value
          (combiner (term x) (accumulate-iter (next-valid (next x))))))
  (accumulate-iter (next-valid a)))

