(define (simpson-integral f a b n)
    (define (h)
            (/ (- b a) n))
    (define (getValue x count)
      (cond ((or (= count 0) 
                 (= count n)) (f x))
            ((even? count)    (* 2 (f x)))
            (else             (* 4 (f x)))))
    (define (sum-iter prev-sum x count)
      (if (> count n)
          prev-sum
          (sum-iter (+ prev-sum (getValue x count)) (+ x (h)) (+ count 1))))
  (/ (* (h) (sum-iter 0 a 0)) 
     3))

