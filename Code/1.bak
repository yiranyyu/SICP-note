                  (lambda (i) 
                    (let  ((r (remainder i 3)))
                          (cond ((or (= 0 r) (= 1 r)) 1)
                                (else (+ 2 (* 2 (/ (- i r) 3)))))))
                  k)))  

(define (tan-cf x k)
  (let ((neg-x-square (- (square x))))
    (cont-frac (lambda (i) (if (= 1 i) x neg-x-square))
               (lambda (i) (- (* 2 i) 1))
               k)))

(define (average-damp f)
